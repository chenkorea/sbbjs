@import "../utils/util.wxss";

.main-view {
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  margin: 0rpx;
  padding: 0rpx;
  position: absolute;
  overflow-y: auto;
  background: #b2be7e;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-attachment: fixed;
}

.userinfo-view-bg {
  margin: 30rpx;
  padding: 30rpx 0rpx;
  background: #cfd6af;
  border-radius: 20rpx;
}

.userinfo-title-view {
  color: #228b22;
  font-size: 36rpx;
  text-align: center;
}

.userinfo-view {
  margin-top: 20rpx;
  padding: 0rpx 30rpx;
}

.userinfo-text {
  width: 100%;
  color: white;
  padding: 10rpx 0rpx;
  display: block;
  font-size: 32rpx;
}

.userinfo-input {
  width: 95%;
  padding: 20rpx;
  font-size: 32rpx;
  background: white;
}
