<view class="main-view">

  <view class="login-view-bg">
  </view>

  <view class="login-view">
   <text class="login-title">用户注册</text>
   
     <input class="user-text" type="number" focus="{{phoneFocus}}" maxlength="11" bindinput="bindPhoneInput" placeholder="手机号码"/>

     <input class="user-text" type="password" focus="{{passwdFocus}}" bindinput="bindPasswdInput" placeholder="密码"/>
     
     <input class="user-text" type="number" focus="{{checkCodeFocus}}" bindinput="bindCheckCodeInput" placeholder="验证码"/>
     
     <view class="send_btn">获取验证码</view>

     <view class="law-view">
       <icon class="iconfont icon-xuanze1" />

       <text class="law-text">我同意《锁帮帮平台服务协议》</text>
     </view>

     <button class="register_btn" bindtap="bindRegisterBtnTap">注册</button>
  </view>
</view>